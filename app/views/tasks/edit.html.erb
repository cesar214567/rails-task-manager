<h1>Edit your Task</h1>

<div class="d-flex justify-content-center ">
  <%= form_for(@task,:class => 'row g-3') do |f| %>
    <%= f.label :title, :class => 'form-label'%>
    <%= f.text_field :title, :class => "form-control"%>
    <%= f.label :details , :class => 'form-label'%>
    <%= f.text_field :details, :class => "form-control" %>
    <%= f.label :completed , :class => 'form-chek-label'%>
    <%= f.check_box :completed, :class => "form-chek-input" %>
    <%= f.submit :class => 'btn btn-primary mb-3' %>
  <% end %>
</div>
